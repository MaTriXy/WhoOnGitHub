<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingRight="@dimen/spacing_large"
    android:paddingTop="@dimen/spacing_large"
    android:paddingBottom="@dimen/spacing_large"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userInfoIconImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_large">

            <TextView
                android:id="@+id/userInfoNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="きりみん"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textStyle="bold"
                android:textColor="@color/grey_900" />

            <TextView
                android:id="@+id/userInfoIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kirimin"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textColor="@color/grey_700"
                android:layout_marginTop="@dimen/spacing_small" />

            <TextView
                android:id="@+id/userInfoLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tokyo, Japan"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textColor="@color/grey_700"
                android:layout_marginTop="@dimen/spacing_large" />

            <TextView
                android:id="@+id/userInfoCompanyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Github"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textColor="@color/grey_700"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/userInfoLinkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://kirimin.me"
        android:textSize="@dimen/abc_text_size_title_material"
        android:autoLink="web"
        android:layout_marginTop="@dimen/spacing_large" />

    <TextView
        android:id="@+id/userInfoMailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cc@kirimin.me"
        android:textSize="@dimen/abc_text_size_title_material"
        android:autoLink="email"
        android:layout_marginTop="@dimen/spacing_small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large_x2"
        android:text="Languages"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_marginBottom="@dimen/spacing_small" />

    <LinearLayout
        android:id="@+id/userInfoLanguageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>